<%= form_with(model: stock, local: true) do |form| %>
  <% if stock.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(stock.errors.count, "error") %> prohibited this stock from being saved:</h2>

      <ul>
        <% stock.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :ticker %>
    <%= form.text_field :ticker, id: :stock_ticker%>
  </div>

  <div class="field">
    <!--Hiding the user id field as it is not required since it is now autopopulated in line 22
    <%= form.label :user_id %>-->
    <!--auto populating the id field with the user id as it hard for the user to memorize the id-->
    <%= form.number_field :user_id, id: :stock_user_id, value: current_user.id, type: :hidden%>
    
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
