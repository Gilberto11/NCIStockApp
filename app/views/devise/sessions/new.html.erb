<!-- adding bootstrap layout to center the fields and adjust size of the fields -->
<div class ="col-md-6 offset-md-3">
  <!-- adding bootstrap jumbotrom which is a big box behind the form-->
  <div class ="jumbotron bg-dark text-white">
    <h2>Sign in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <div class="field">
        <%= f.label :email %><br />
        <!-- adding bootstrap form control-->
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      <br/>

      <div class="field">
        <%= f.label :password %><br />
        <!-- adding bootstrap form control-->
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>

      <% end %>

      <div class="actions">
        <!--adding sign in button using bootstrap-->
        <%= f.submit "Sign in", class: "btn btn-light" %>
      </div>
      </div>
    <% end %>

    <br/><br/>
    <%= render "devise/shared/links" %>
  </div>
</div>


